<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/29653ac336.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/tienda.css" class="css">
    <link rel="stylesheet" href="/css/header.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&family=Raleway:wght@300&display=swap"
        rel="stylesheet">
    <title>Tienda</title>
</head>

<body>
    <%- include('./partials/header')%>
        <nav id="header">
            <h2 class="tienda_h2">Tienda</h2>
        </nav>
        <main>
            <div id="contenedor" class="contenedor">
                <% for( let i=0; i < productos.length; i++ ) {%>
                    <div>
                        <a href="/tienda/detail/<%= productos[i].id %>/" id="detail-a">
                            <img src="./images/<%= productos[i].image %>" alt="Producto" id="imagen">
                            <div class="informacion">
                                <p class="nombre_producto">
                                    <%= productos[i].name %>
                                </p>
                                <p class="precio">
                                    $<%= productos[i].price %>
                                </p>
                                <span class="desc">
                                    <%= productos[i].preview %>
                                </span>
                                <button></button>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </div>
            <script src="/app.js"></script>
            <script>
                function alClicar() {
                    window.location.href = "/tienda/detail";
                }
            </script>
            <%- include('./partials/footer')%>
        </main>
</body>

</html>